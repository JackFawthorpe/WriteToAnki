{
    "manifest_version": 2,
    "name": "Write to Anki",
    "version": "1.0",
  
    "description": "Streamlines reading to Flash Card Creation",
  
    "permissions": [
        "contextMenus",
        "http://localhost:5000/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["test.js"]
      }
    ],
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true,
        "type": "module"
    },      
    "browser_action": {
        "default_title": "Write To Anki",
        "default_popup": "popup.html"
    }
  }